<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.metamaskwalletdemo.ui.main.MainFragment"
        android:label="@string/main_fragment_label"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_SwapFragment"
            app:destination="@id/SwapFragment" />
    </fragment>
    <fragment
        android:id="@+id/SwapFragment"
        android:name="com.example.metamaskwalletdemo.ui.swap.SwapFragment"
        android:label="@string/swap_fragment_label"
        tools:layout="@layout/fragment_swap">

        <action
            android:id="@+id/action_SwapFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
</navigation>