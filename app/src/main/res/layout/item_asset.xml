<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBackground"
        android:padding="20dp">

        <ImageView
            android:id="@+id/tokenImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/eth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tokenCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 ETH"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/tokenImage"
            app:layout_constraintTop_toTopOf="@id/tokenImage" />

        <TextView
            android:id="@+id/tokenPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00usd"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@id/tokenCount"
            app:layout_constraintTop_toBottomOf="@id/tokenCount" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>